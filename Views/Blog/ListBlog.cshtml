@* View for displaying a list of blogs *@
@model List<MVC_BlogWebApp.Models.BlogModel.Blog>

@{
    ViewData["Title"] = "Blog List";
    int counter = 1; // Counter variable for serial numbers
}

<div class="container mt-5 p-4 shadow-lg rounded bg-light">
    <h1 class="text-center mb-4 text-primary">Blog List</h1>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="bi bi-exclamation-circle-fill text-warning"></i>
            <strong>No blogs yet!</strong> Add some blogs to see them listed here.
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var blog in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title text-primary">#@counter: @blog.Title</h5>
                            <h6 class="card-subtitle mb-2 text-muted">By @blog.Author</h6>
                            <p class="card-text text-truncate">
                                A preview of the blog's content can be added here if desired.
                            </p>
                            <div class="d-flex justify-content-between">
                                <a asp-controller="Blog" asp-action="ViewById" asp-route-id="@blog.bId" class="btn btn-outline-primary btn-sm">
                                    View Blog
                                </a>
                                <a asp-controller="Blog" asp-action="DeleteBlog" asp-route-id="@blog.bId" class="btn btn-outline-danger btn-sm">
                                    Delete Blog
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                counter++;
            }
        </div>
    }
</div>
