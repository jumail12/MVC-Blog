@{
}

@model MVC_BlogWebApp.Models.BlogModel.Blog

@if (Model == null)
{
    <div class="alert alert-warning text-center" role="alert">
        <i class="bi bi-exclamation-circle-fill text-warning"></i>
        <strong>Not Found!</strong>
    </div>
}
else
{
    <h1>Edit Blog</h1>

    <form asp-controller="Blog" asp-action="EditConf" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <input type="hidden" asp-for="bId" />

        <div class="mt-3">
            <label asp-for="Title" class="form-label"></label>
            <input type="text" asp-for="Title" class="form-control" required />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Content" class="form-label"></label>
            <input type="text" asp-for="Content" class="form-control" required />
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <label asp-for="Author" class="form-label"></label>
            <input type="text" asp-for="Author" class="form-control" required />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
}